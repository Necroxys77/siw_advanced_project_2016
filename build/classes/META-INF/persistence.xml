<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="heavenhospital-unit" transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>PostgreSQL Database</jta-data-source>
 	<!--  	<non-jta-data-source>PostgreSQL Database</non-jta-data-source> -->
		<class>it.heavenhospital.model.Product</class>
		<class>it.heavenhospital.model.Paziente</class>
		<class>it.heavenhospital.model.Amministratore</class>
		<class>it.heavenhospital.model.Medico</class>
		<class>it.heavenhospital.model.Esame</class>
		<class>it.heavenhospital.model.TipologiaEsame</class>
		<class>it.heavenhospital.model.Indicatore</class>
		<class>it.heavenhospital.model.Prerequisito</class>
		<properties>
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
		</properties>
	</persistence-unit>
</persistence>
          